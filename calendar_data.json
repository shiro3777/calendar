import json
from datetime import date, timedelta

# 聖書箇所リスト（例としてローマとコリント）
bible_passages = [
    "使徒20", "使徒21", "使徒22", "使徒23", "使徒24", "使徒25", "使徒26", "使徒27", "使徒28",
    "ローマ1", "ローマ2", "ローマ3", "ローマ4", "ローマ5", "ローマ6", "ローマ7", "ローマ8", "ローマ9",
    "ローマ10", "ローマ11", "ローマ12", "ローマ13", "ローマ14", "ローマ15", "ローマ16",
    "1コリント1", "1コリント2", "1コリント3", "1コリント4", "1コリント5", "1コリント6"
]

# 2025年7月1日から開始
start_date = date(2025, 7, 1)

calendar_data = []
for i, passage in enumerate(bible_passages):
    current = start_date + timedelta(days=i)
    calendar_data.append({
        "date": current.isoformat(),
        "passage": passage
    })

# JSON保存
with open("calendar_data.json", "w", encoding="utf-8") as f:
    json.dump(calendar_data, f, ensure_ascii=False, indent=2)
